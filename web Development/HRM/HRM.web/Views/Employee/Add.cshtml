@using HRM.Web.Models;
@model Employee

<h3 class="text-center">New Employee Form</h3>

<form action="/Employee/Add" method="post">
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for=FirstName type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for=LastName class="form-label"></label>
        <input asp-for=LastName type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for=Gender class="form-label"></label>
        <div class="form-check form-check-inline">
            <input asp-for=Gender class="form-check-input" type="radio" value="m">
            <label asp-for=Gender class="form-check-label">Male</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for=Gender class="form-check-input" type="radio" value="f">
            <label asp-for=Gender class="form-check-label">Female</label>
        </div>
        <div asp-for=Gender class="form-check form-check-inline">
            <input asp-for=Gender class="form-check-input" type="radio" value="o">
            <label asp-for=Gender class="form-check-label">Others</label>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for=Address class="form-label"></label>
        <textarea asp-for=Address class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for=Dob class="form-label"></label>
        <input asp-for=Dob type="date" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for=Designation class="form-label"></label>
        <input asp-for=Designation type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for=Department class="form-label">Department</label>
        <input asp-for=Department type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for=Bio class="form-label">Bio</label>
        <textarea asp-for=Bio class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save</button>
</form>